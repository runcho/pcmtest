<mvc:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.commons.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons"
	controllerName="c4c.table-accountcollection.remote.view.dialog" xmlns:m="sap.m" xmlns:html="http://www.w3.org/1999/xhtml">
	<m:ViewSettingsDialog title="{i18n_Static>starterTableTemplate.dialog.title}" id="c4cDialog" confirm="confirmDialog" cancel="onExit"
		resetFilters="onResetFilters">
		<m:sortItems>
			<m:ViewSettingsItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.ExternalID}" key="ExternalID" selected="true"/>
			<m:ViewSettingsItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.AccountName}" key="AccountName"/>
			<m:ViewSettingsItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.Address}" key="Address"/>
			<m:ViewSettingsItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.CountryText}" key="CountryText"/>
		</m:sortItems>
		<m:filterItems>
			<m:ViewSettingsCustomItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.ExternalID}" key='ExternalID'>
				<m:customControl>
					<m:Input placeholder="{i18n_Static>starterTableTemplate.dialog.inputPlaceholder}" change="onFilterChange" name="ExternalID"></m:Input>
				</m:customControl>
			</m:ViewSettingsCustomItem>
			<m:ViewSettingsCustomItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.AccountName}" key='AccountName'>
				<m:customControl>
					<m:Input placeholder="{i18n_Static>starterTableTemplate.dialog.inputPlaceholder}" change="onFilterChange" name="AccountName"></m:Input>
				</m:customControl>
			</m:ViewSettingsCustomItem>
			<m:ViewSettingsCustomItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.Address}" key='Address'>
				<m:customControl>
					<m:Input placeholder="{i18n_Static>starterTableTemplate.dialog.inputPlaceholder}" change="onFilterChange" name="Address"></m:Input>
				</m:customControl>
			</m:ViewSettingsCustomItem>
			<m:ViewSettingsCustomItem text="{i18n>CHP.Account.UI.LineItem.UI.DataField.CountryText}" key='CountryText'>
				<m:customControl>
					<m:Input placeholder="{i18n_Static>starterTableTemplate.dialog.inputPlaceholder}" change="onFilterChange" name="CountryText"></m:Input>
				</m:customControl>
			</m:ViewSettingsCustomItem>
		</m:filterItems>
	</m:ViewSettingsDialog>
</mvc:View>