<mvc:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons" xmlns:m="sap.m"
	controllerName="c4c.table-opportunitycollection.remote.view.table" xmlns:html="http://www.w3.org/1999/xhtml" class="tableView">
	<m:Page title="{i18n>CHP.Opportunity.UI.HeaderInfo.TypeNamePlural.OpportunityName}" showNavButton="true" class="pageEl table-pattern-page"
		navButtonPress="handleNavButtonPress">
		<m:content>
			<m:VBox>
				<m:Table class="table" id="c4cTable" inset="false" growingScrollToLoad="false" growing="false" includeItemInSelection="true"
					mode="{tableModel>/mode}" growingThreshold="{tableModel>/growingThreshold}" items="{ path: '/boCollection', filters: [] }">
					<m:columns>
						<m:Column>
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ID}" tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ID}"/>
						</m:Column>
						<m:Column>
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.OpportunityName}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.OpportunityName}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.AccountName}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.AccountName}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.PrimaryContactName}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.PrimaryContactName}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ExpectedValue.ExpectedValueCurrencyCode}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ExpectedValue.ExpectedValueCurrencyCode}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.StatusText}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.StatusText}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.SalesCycleText}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.SalesCycleText}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.SalesPhaseText}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.SalesPhaseText}"/>
						</m:Column>
						<m:Column minScreenWidth="Tablet" demandPopin="true">
							<m:Label text="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ProgressText}"
								tooltip="{i18n>CHP.Opportunity.UI.LineItem.UI.DataField.ProgressText}"/>
						</m:Column>
					</m:columns>
					<m:infoToolbar>
						<m:Toolbar visible="{tableModel>/showInfoBar}" active="true" press="toolBarPressed"
							tooltip="{i18n_Static>starterTableTemplate.table.infoToolbar.tooltip}">
							<m:Label text="{tableModel>/infoBarLabel}"></m:Label>
						</m:Toolbar>
					</m:infoToolbar>
					<m:headerToolbar>
						<m:Toolbar class="tableHeader">
							<m:ComboBox id="queryCombobox" class="tableComboBox" selectionChange="queryChanged"
								selectedKey="CHP.Opportunity.UI.Query.UI.Filter.AllOpportunities">
								<core:Item key="CHP.Opportunity.UI.Query.UI.Filter.AllOpportunities"
									text="{i18n_AnnoExt>CHP.Opportunity.UI.Query.UI.Filter.AllOpportunities}"/>
								<core:Item key="CHP.Opportunity.UI.Query.UI.Filter.MyOpportunities" text="{i18n_AnnoExt>CHP.Opportunity.UI.Query.UI.Filter.MyOpportunities}"/>
							</m:ComboBox>
							<m:ToolbarSpacer></m:ToolbarSpacer>
							<m:Button class="filterBtn" icon="sap-icon://drop-down-list" press="openDialog"
								tooltip="{i18n_Static>starterTableTemplate.table.settings.btn}" enabled="{tableModel>/filterBtnEnable}"></m:Button>
						</m:Toolbar>
					</m:headerToolbar>
					<m:items >
						<m:ColumnListItem>
							<m:cells >
								<m:Label text="{ID}" tooltip="{ID}"/>
								<m:Link text="{OpportunityName}" tooltip="{OpportunityName}" press="navigateToDetails">
									<m:customData>
										<core:CustomData key="action" value="Details"/>
										<core:CustomData key="targetObject" value="Opportunity"/>
									</m:customData>
								</m:Link>
								<m:Label text="{AccountName}" tooltip="{AccountName}"/>
								<m:Label text="{PrimaryContactName}" tooltip="{PrimaryContactName}"/>
								<m:Label text="{parts: ['ExpectedValue', 'ExpectedValueCurrencyCode'] , formatter:'.getFieldDetails'}"
									tooltip="{parts: ['ExpectedValue', 'ExpectedValueCurrencyCode'] , formatter:'.getFieldDetails'}"/>
								<m:Label text="{StatusText}" tooltip="{StatusText}"/>
								<m:Label text="{SalesCycleText}" tooltip="{SalesCycleText}"/>
								<m:Label text="{SalesPhaseText}" tooltip="{SalesPhaseText}"/>
								<m:Label text="{ProgressText}" tooltip="{ProgressText}"/>
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
				<m:VBox class="table-trigger">
					<m:Text class="trigger-text" text="{i18n_Static>starterTableTemplate.More}"></m:Text>
					<m:Text class="trigger-description" text="{i18n_Static>starterTableTemplate.More}"></m:Text>
					<m:BusyIndicator visible="{tableSettingsModel>/showTriggerBusyIndicator}" class="table-trigger-bi"></m:BusyIndicator>
				</m:VBox>
			</m:VBox>
			<m:BusyIndicator visible="{tableSettingsModel>/showBusyIndicator}" class="table-bi"></m:BusyIndicator>
		</m:content>
		<m:footer>
			<m:Toolbar class="tableFooter">
				<m:content>
					<m:ToolbarSpacer></m:ToolbarSpacer>
					<m:Button class="addRecordBtn" icon="sap-icon://add" press="handleCreateRecord"
						tooltip="{i18n_Static>starterTableTemplate.table.addRecord.btn}"></m:Button>
				</m:content>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>